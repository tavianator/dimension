/*
 * Start symbol
 */

SCENE: /* empty */
     | SCENE SCENE_ITEM {
       dmnsn_array_push(astree, &$2);
     }
;

/* Top-level scene item */
SCENE_ITEM: ATMOSPHERIC_EFFECT
          | CAMERA
          | OBJECT
;

/* Atmospheric effects */

ATMOSPHERIC_EFFECT: BACKGROUND
;

BACKGROUND: "background" "{" COLOR "}" {
            $$ = dmnsn_new_astnode1(DMNSN_AST_BACKGROUND, @$, $3);
          }
;
